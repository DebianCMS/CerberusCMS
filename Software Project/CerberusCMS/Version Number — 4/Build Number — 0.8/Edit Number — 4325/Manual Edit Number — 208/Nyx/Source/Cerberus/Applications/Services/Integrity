/*
 ============================================================================================================
 + WHILE :: Retrieving :: All :: Applcication Module Entries :: Panels :: Entry Data
 ============================================================================================================
*/

while ($_Application_Module_Services_Integrity_List_DB_Query_List_Application_Panels_Fetch_Array = $DB->fetch_array($_Application_Module_Services_Integrity_List_DB_Query_List_Application_Panels)) {

$_Application_Module_Member_Application_List_LIST_APPLICATION_PANEL_ID							= $_Application_Module_Services_Integrity_List_DB_Query_List_Applications_Panels_Fetch_Array['id'];
