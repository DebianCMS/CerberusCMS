														</SELECT><BR>
													* Notepad :: Note :: Name<BR>
														<INPUT TYPE=\"text\" NAME=\"AMM_Notepad_Post_Create_Notepad_Note_Name\" MAXLENGTH=\"100\"><BR>
													* Notepad :: Note :: Password<BR>
