													* Notepad :: Note :: Data<BR>
														<TEXTAREA ROWS=\"20\" COLS=\"120\" NAME=\"AMM_Notepad_Post_Create_Notepad_Note_Data\" MAXLENGTH=\"4096\">Write Notepad Note here...</TEXTAREA><BR>
													<INPUT TYPE=\"submit\" VALUE=\"Create Note\">
												</FORM>
");

} else {

$_Application_Module_Member_Notepad_DB_Query_INSERT_NOTEPAD_NOTE			= $DB->query("INSERT INTO {$_ACCESS_DATABASE_SERVER_DATABASE_TABLE_PREFIX}_notepad(
note_access_level,
note_author,
note_data,
note_encrypted,
note_name,
note_password,
note_timestamp
)VALUES(
'$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_ACCESS_LEVEL',
'$_GLOBAL_COOKIE_MEMBER_USERNAME',
'$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_DATA',
'$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_ENCRYPTED',
'$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_NAME',
'$_Application_Module_Member_Notepad_POST_UNLOCK_NOTEPAD_NOTE_PASSWORD_HASHED',
'$_GLOBAL_LOCAL_SERVER_DATE'
)");

if ($_Application_Module_Member_Notepad_DB_Query_INSERT_NOTEPAD_NOTE) {

										echo ($_Application_Module_Member_Message_Notepad_NOTE_CREATED_SUCCESSFULLY);

} else {

										echo ($_Application_Module_Member_Message_Notepad_NOTE_CREATE_ERROR);

} // [ + ] IF: Database Management System Server Query :: Insert New Notepad Note :: Variable HAS Executed

} // [ + ] IF: Internal Application: Display :: Is: Create Note

/*
 ============================================================================================================
 +
 + Find :: All Notepad Note Entries
 +
 ============================================================================================================
*/

/*
 ============================================================================================================
 + Database Server Query: Select All Notepad Note Entries From The Database Management System Server Database
 ============================================================================================================
*/

$_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES				= $DB->query("SELECT * FROM {$_ACCESS_DATABASE_SERVER_DATABASE_TABLE_PREFIX}_notepad ORDER BY id DESC");

/*
 ============================================================================================================
 +
 + Retrieve :: All Notepad Note Entries
 +
 ============================================================================================================
*/


while ($_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array = $DB->fetch_array($_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES)) {

$_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID							= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['id'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_ACCESS_LEVEL					= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_access_level'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_AUTHOR						= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_author'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_DATA						= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_data'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_ENCRYPTED						= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_encrypted'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_NAME						= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_name'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_PASSWORD						= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_password'];
$_Application_Module_Pages_LIST_NOTEPAD_NOTE_TIMESTAMP						= $_Application_Module_Notepad_DB_Query_SELECT_ALL_NOTEPAD_NOTE_ENTRIES_Fetch_Array['note_timestamp'];

/*
 ============================================================================================================
 +
 + IF: Internal Application: Display Note :: Note ID Number
 +
 ============================================================================================================
*/

if ($_GET["DisplayNote"] == "$_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID") {

/*
 ============================================================================================================
 + IF: Notepad Note :: Access Level :: Is: 0, Public
 ============================================================================================================
*/

if ($_Application_Module_Pages_LIST_NOTEPAD_NOTE_ACCESS_LEVEL == "0") {

if ($_Application_Module_Pages_LIST_NOTEPAD_NOTE_PASSWORD != null) {

echo ("
												<FORM ACTION=\"?$_INTERNAL_APPLICATION_MODULE_MEMBER&#61;Notepad&amp;DisplayNote&#61;$_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID&amp;$_GLOBAL_SYSTEM_SECURITY_CACHE_CIRCUMVENTION_HTR_RANDOM_STRING_GENERATION\" METHOD=\"post\">
													* Notepad :: Note :: Password<BR>
														<INPUT TYPE=\"text\" NAME=\"AMM_Notepad_Note_Unlock_Password_ClearText\" MAXLENGTH=\"100\"><BR>
													<INPUT TYPE=\"submit\" VALUE=\"Submit Password\">
												</FORM>
");

} else {

echo ("
Notepad Note ID Number: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID :: Name: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_NAME<BR>
<TEXTAREA ROWS=\"20\" COLS=\"120\">$_Application_Module_Pages_LIST_NOTEPAD_NOTE_DATA</TEXTAREA><BR>
This Notepad Note Was Created On: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_TIMESTAMP By: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_AUTHOR<BR>
Is This Notepad Note Encrypted ?: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ENCRYPTED<BR><BR>
");

} // [ + ] IF: Note Note :: Password Exists

} // [ + ] IF: Notepad Note :: Access Level :: Is: 0 :: Public

/*
 ============================================================================================================
 + IF: Notepad Note :: Access Level :: Is: 1, Registered Member Account
 ============================================================================================================
*/

if ($_Application_Module_Pages_LIST_NOTEPAD_NOTE_ACCESS_LEVEL == "1") {

if ($_GLOBAL_COOKIE_MEMBER_USERNAME && $_GLOBAL_COOKIE_MEMBER_PASSWORD != null) {

if ($_GLOBAL_MEMBER_ACCESS_LEVEL >= 1) {

echo ("
Notepad Note ID Number: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID :: Name: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_NAME<BR>
<TEXTAREA ROWS=\"20\" COLS=\"120\">$_Application_Module_Pages_LIST_NOTEPAD_NOTE_DATA</TEXTAREA><BR>
This Notepad Note Was Created On: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_TIMESTAMP By: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_AUTHOR<BR>
Is This Notepad Note Encrypted ?: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ENCRYPTED<BR><BR>
");

} // [ + ] IF: Registered Member Account :: Access Level :: Is: Greater Than OR Equal To 1

} // [ + ] IF: Registered Member Account :: Is: Logged-In And Valid Credentials Are Set

} // [ + ] IF: Notepad Note :: Access Level :: Is: 1 :: Registered Member Account

/*
 ============================================================================================================
 + IF: Notepad Note :: Access Level :: Is: 2, Registered Member Account - Administration-Level
 ============================================================================================================
*/

if ($_Application_Module_Pages_LIST_NOTEPAD_NOTE_ACCESS_LEVEL == "2") {

if ($_GLOBAL_COOKIE_MEMBER_USERNAME && $_GLOBAL_COOKIE_MEMBER_PASSWORD != null) {

if ($_GLOBAL_MEMBER_ACCESS_LEVEL >= 2) {

echo ("
Notepad Note ID Number: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID :: Name: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_NAME<BR>
<TEXTAREA ROWS=\"20\" COLS=\"120\">$_Application_Module_Pages_LIST_NOTEPAD_NOTE_DATA</TEXTAREA><BR>
This Notepad Note Was Created On: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_TIMESTAMP By: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_AUTHOR<BR>
Is This Notepad Note Encrypted ?: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ENCRYPTED<BR><BR>
");

} // [ + ] IF: Registered Member Account :: Access Level :: Is: Greater Than OR Equal To 2

} // [ + ] IF: Registered Member Account :: Is: Logged-In And Valid Credentials Are Set

} // [ + ] IF: Notepad Note :: Access Level :: Is: 2 :: Registered Member Account - Administration-Level

/*
 ============================================================================================================
 + IF: Notepad Note :: Access Level :: Is: 3, Registered Member Account - Administration Root-Level
 ============================================================================================================
*/

if ($_Application_Module_Pages_LIST_NOTEPAD_NOTE_ACCESS_LEVEL == "3") {

if ($_GLOBAL_COOKIE_MEMBER_USERNAME && $_GLOBAL_COOKIE_MEMBER_PASSWORD != null) {

if ($_GLOBAL_MEMBER_ACCESS_LEVEL >= 3) {

echo ("
Notepad Note ID Number: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ID :: Name: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_NAME<BR>
<TEXTAREA ROWS=\"20\" COLS=\"120\">$_Application_Module_Pages_LIST_NOTEPAD_NOTE_DATA</TEXTAREA><BR>
This Notepad Note Was Created On: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_TIMESTAMP By: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_AUTHOR<BR>
Is This Notepad Note Encrypted ?: $_Application_Module_Pages_LIST_NOTEPAD_NOTE_ENCRYPTED<BR><BR>
");

} // [ + ] IF: Registered Member Account :: Access Level :: Is: Greater Than OR Equal To 3

} // [ + ] IF: Registered Member Account :: Is: Logged-In And Valid Credentials Are Set

} // [ + ] IF: Notepad Note :: Access Level :: Is: 3 :: Registered Member Account - Administration Root-Level

} // [ + ] IF: Internal Application: Display Note :: Is: ID Number

} // [ + ] WHILE: Retrieving All Custom Web Application Module Entries From The Database Management System Server

