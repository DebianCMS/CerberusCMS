if ($_GET["Display"] == "CreateNote") {

if ($_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_NOTEPAD_DATA) {

echo ("
												<FORM ACTION=\"?$_INTERNAL_APPLICATION_MODULE_MEMBER&#61;Notepad&amp;Display&#61;CreateNote&amp;&amp;$_GLOBAL_SYSTEM_SECURITY_CACHE_CIRCUMVENTION_HTR_RANDOM_STRING_GENERATION\" METHOD=\"post\">
													* Notepad :: Note :: Access Level<BR>
														<SELECT NAME=\"AMM_Notepad_Post_Create_Notepad_Note_Access_Level\" MAXLENGTH=\"1\">
															<OPTION VALUE=\"0\">0 :: Public</OPTION>
															<OPTION VALUE=\"1\">1 :: Registered Member Account</OPTION>
															<OPTION VALUE=\"2\">2 :: Registered Member Account :: Moderation</OPTION>
															<OPTION VALUE=\"3\">3 :: Registered Member Account :: Administration</OPTION>
