$_Application_Module_Member_Notepad_POST_UNLOCK_NOTEPAD_NOTE_PASSWORD_CLEARTEXT		= $_POST['AMM_Notepad_Post_Unlock_Notepad_Note_Password_ClearText'];
$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_ACCESS_LEVEL		= $_POST['AMM_Notepad_Post_Create_Notepad_Note_Access_Level'];
$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_PASSWORD_CLEARTEXT		= $_POST['AMM_Notepad_Post_Create_Notepad_Note_Password_ClearText'];
$_Application_Module_Member_Notepad_POST_CREATE_NOTEPAD_NOTE_DATA			= $_POST['AMM_Notepad_Post_Create_Notepad_Note_Data'];
